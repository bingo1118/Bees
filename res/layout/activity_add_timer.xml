<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/add_timer_title" 
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/shou_ye_bg"
        >
	  	<TextView
	  	    android:id="@+id/add_timer_back" 
	  	    android:layout_width="wrap_content"
	  	    android:layout_height="40dp"
	  	    android:text="返回"
	  	    android:layout_centerVertical="true"
	  	    android:visibility="gone"
	  	    />
	  	<TextView
	  	    android:layout_width="wrap_content"
	  	    android:layout_height="wrap_content"
	  	    android:text="设置定时"
	  	    android:textColor="#000000"
	  	    android:textSize="19sp"
	  	    android:layout_marginTop="10dp"
	  	    android:layout_centerInParent="true"
	  	    />
	  	<Button
	  	    android:id="@+id/confire_button" 
	  	    android:layout_width="25dp"
	  	    android:layout_height="25dp"
	  	    android:background="@drawable/queding"
	  	    android:layout_alignParentRight="true"
	  	    android:layout_centerVertical="true"
	  	    android:layout_marginRight="10sp"
	  	    />
  	</RelativeLayout>
  	
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_below="@id/add_timer_title"
		android:background="#ffffff"
        >
        <RelativeLayout
            android:id="@+id/fire_lin" 
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:background="#ffffff"
            >
            <TextView 
                android:id="@+id/agin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="重复"
                />
            <TextView
                android:id="@+id/repetition_tv" 
                android:layout_below="@id/agin_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textSize="17sp"
                android:text="执行一次"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/lead"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <ImageView 
            android:layout_below="@id/fire_lin"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/shou_ye_bg"
            />
        <LinearLayout 
            android:id="@+id/second_lin"
            android:layout_below="@id/fire_lin" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="1dp"
            >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff"
                >
	            <TextView
	                android:id="@+id/open_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#000000"
	                android:textSize="17sp"
	                android:layout_marginLeft="20dp"
	                android:layout_marginTop="10dp"
	                android:text="开启时间"
	                />
	            <TextView 
	                android:id="@+id/open_time" 
	                android:layout_below="@id/open_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#000000"
	                android:textSize="17sp"
	                android:layout_marginLeft="20dp"
	                android:text="未设置"
	                />
	            <TextView 
	                android:id="@+id/clear_open_time" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="清除"
	                android:textSize="17sp"
	                android:textColor="#000000"
	                android:visibility="gone"
	                android:layout_marginRight="15dp"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                />
	            <ImageView
	                android:id="@+id/start_time_image"
	                android:layout_alignParentRight="true"
	                android:layout_width="20dp"
                	android:layout_height="20dp"
	                android:src="@drawable/lead"
	                android:layout_marginRight="10dp"
	                android:layout_centerVertical="true"
                />
            </RelativeLayout>
        </LinearLayout>
        <ImageView 
            android:layout_below="@id/second_lin"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/shou_ye_bg"
            />
        <LinearLayout
            android:id="@+id/thire_lin" 
            android:layout_below="@id/second_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            >
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#ffffff"
	            >
	            <TextView
	                android:id="@+id/close_tv" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#000000"
	                android:textSize="17sp"
	                android:layout_marginLeft="20dp"
	                android:layout_marginTop="10dp"
	                android:text="关闭时间"
	                />
	            <TextView
	                android:id="@+id/close_time" 
	                android:layout_below="@id/close_tv"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#000000"
	                android:layout_marginLeft="20dp"
	                android:textSize="17sp"
	                android:text="未设置"
	                />
	            <TextView 
	                android:id="@+id/clear_close_time" 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#000000"
	                android:textSize="17sp"
	                android:text="清除"
	                android:visibility="gone"
	                android:layout_marginRight="15dp"
	                android:layout_alignParentRight="true"
	                android:layout_centerVertical="true"
	                />
	            <ImageView
	                android:id="@+id/end_time_image"
	                android:layout_alignParentRight="true"
	                android:layout_width="20dp"
                	android:layout_height="20dp"
	                android:src="@drawable/lead"
	                android:layout_centerVertical="true"
	                android:layout_marginRight="10dp"
                />
            </RelativeLayout>
        </LinearLayout>
        <ImageView 
            android:layout_below="@id/thire_lin"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/shou_ye_bg"
            />
    </RelativeLayout>
    
    <include layout="@layout/time_list_item"/>
    <include layout="@layout/diy_item"/>
    <include layout="@layout/activity_diy_timer_list"/>
</RelativeLayout>